def calculator():
    function_start = (input("press enter to continue"))
    function_input = (input("Choose a function : 1 - Division, 2 - Addition, 3 - Subtraction, 4 - Multiplication"))
    if function_input not in ("1", "2", "3", "4"):
        print("Invalid function input")
        return
    while True:
        try:
            user_input1 = int(input("choose the first number"))
            break
        except ValueError:
            print(f"Invalid Input, try again")
    while True:
        try:
            user_input2 = int(input("choose the second number"))
            break
        except ValueError:
            print(f"Invalid Input, try again")
    results = 0
    
    if function_input == "1":
        results = user_input1 / user_input2
    elif function_input == "2":
        results = user_input1 + user_input2
    elif function_input == "3":
        results = user_input1 - user_input2
    elif function_input == "4":
        results = user_input1 * user_input2
    else:
        print("Error..Invalid input")
        return
    print (f"Your result is :{results}")
    
calculator()
